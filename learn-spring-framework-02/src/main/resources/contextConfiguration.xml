<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context" xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
	<!-- bean definitions here -->

	<bean id="name" class="java.lang.String">
		<constructor-arg value="Prateek" />
	</bean>

	<bean id="age" class="java.lang.Integer">
		<constructor-arg value="24" />
	</bean>

	<context:component-scan base-package="com.in28minutes.learnspringframework.game" />

	<bean id="pacman" class="com.in28minutes.learnspringframework.game.Pacman" />
	<bean id="mario" class="com.in28minutes.learnspringframework.game.MarioGame" />

	<bean id="pacmanGameRunner" class="com.in28minutes.learnspringframework.game.GameRunner">
		<constructor-arg ref="pacman" />
	</bean>

	<bean id="marioGameRunner" class="com.in28minutes.learnspringframework.game.GameRunner">
		<constructor-arg ref="mario" />
	</bean>
</beans>